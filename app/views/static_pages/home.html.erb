<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Portfolio of Experience</h1>
    <h2>
      This page presents the experience of IT professionals based on the development of IT projects
    </h2>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
    <h4>
      If you are already registered  <%= link_to "Sign in", signin_path %>
    </h4>
  </div>
<% end %>

